{
  "package": "com.meilin.poetry",
  "name": "诗文小札",
  "versionName": "1.0.0",
  "versionCode": "1",
  "minPlatformVersion": "1020",
  "icon": "/assets/images/logo.png",
  "features": [
    { "name": "system.fetch" },
    { "name": "system.storage" },
    { "name": "system.device" },
    { "name": "system.network" },
    { "name": "service.account" },
    { "name": "system.prompt" },
    { "name": "system.router" },
    { "name": "system.shortcut" },
    { "name": "system.webview" },
    {
      "name": "service.share",
      "params": {
        "appSign": "",
        "wxKey": ""
      }
    }
  ],
  "permissions": [{ "origin": "*" }],
  "config": {
    "logLevel": "debug",
    "designWidth": 800
  },
  "router": {
    "entry": "pages/Search",
    "pages": {
      "pages/Main": {
        "component": "index"
      },
      "pages/Favorites": {
        "component": "index"
      },
      "pages/Detail": {
        "component": "index"
      },
      "pages/About": {
        "component": "index"
      },
      "pages/Search": {
        "component": "index"
      }
    }
  },
  "display": {
    "fullScreen": true,
    "titleBar": false,
    "titleBarBackgroundColor": "#f2f2f2",
    "titleBarTextColor": "#333333",
    "menu": true,
    "pages": {
      "pages/Main": {
        "titleBarText": "诗文小札",
        "menu": true
      },
      "pages/Favorites": {
        "titleBarText": "我的收藏",
        "menu": false
      },
      "pages/Search": {
        "titleBarText": "搜索",
        "menu": false
      },
      "pages/About": {
        "menu": false
      }
    }
  }
